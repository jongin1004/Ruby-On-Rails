<p id="notice"><%= notice %></p>

<h1>Scaffold Blogs</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>      
      <th>Title</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scaffold_blogs.each_with_index do |scaffold_blog, index| %>
      <tr>
        <td>
          <%= index + 1 %>
        </td>       
        <td>
          <%= link_to(scaffold_blog) do%>
            <%= scaffold_blog.title %>
          <% end %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scaffold Blog', new_scaffold_blog_path %>
